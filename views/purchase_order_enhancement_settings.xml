<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="purchase_order_enhancement_settings" model="ir.ui.view">
        <field name="name">purchase.order.enhancement.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"></field>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('app_settings_block')]/div[@name='purchase_setting_container']" position="after">
                <h2>Purchase Orders (Enhancement)</h2>
                <div class="row mt16 o_settings_container" name="purchase_enhancement_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <group>
                            <field name="lifespan" readonly="0"></field>
                        </group>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>